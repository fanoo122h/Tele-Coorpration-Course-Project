<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ratinglayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/ran">

    <RelativeLayout
        android:id="@+id/relativeLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="@android:color/darker_gray"
        android:paddingTop="10dp"
        tools:ignore="UselessParent">

        <EditText
            android:id="@+id/comment_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignStart="@+id/cancel"
            android:layout_marginStart="14dp"
            android:ems="10"
            android:inputType="textMultiLine"
            android:textColor="@color/common_google_signin_btn_text_dark_default"
            tools:ignore="LabelFor,UnknownIdInLayout" />

        <Button
            android:id="@+id/cancel_comment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/submit_comment"
            android:layout_alignBottom="@+id/submit_comment"
            android:layout_marginEnd="19dp"
            android:layout_toStartOf="@+id/submit_comment"
            android:background="@android:color/holo_red_light"
            android:fontFamily="casual"
            android:text="Cancel"
            android:textAlignment="center"
            android:textColor="@color/common_google_signin_btn_text_dark_default"
            android:textStyle="bold"
            tools:ignore="HardcodedText" />

        <Button
            android:id="@+id/submit_comment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/comment_tv"
            android:layout_below="@+id/comment_tv"
            android:layout_marginTop="23dp"
            android:background="@android:color/holo_green_light"
            android:fontFamily="casual"
            android:text="Submit"
            android:textAlignment="center"
            android:textColor="@color/common_google_signin_btn_text_dark_default"
            android:textStyle="bold"
            tools:ignore="HardcodedText" />


        <Button
            android:id="@+id/button_img"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:layout_marginEnd="21dp"
            android:background="@drawable/imageupload"
            android:backgroundTint="@android:color/holo_red_light"
            android:elevation="7dp"
            android:fontFamily="casual"
            android:textAlignment="center"
            android:textAllCaps="false"
            android:textColor="@color/common_google_signin_btn_text_dark_default"
            android:textStyle="bold"
            tools:ignore="HardcodedText" />


    </RelativeLayout>


</RelativeLayout>
